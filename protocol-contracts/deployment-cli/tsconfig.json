{
    "compilerOptions": {
        // Environment setup & latest features
        "lib": ["ESNext"],
        "target": "ESNext",
        "module": "Preserve",
        "moduleDetection": "force",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        "rootDir": ".",
        "outDir": "dist",
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "types": ["node", "bun"]
    },
    "include": ["src", "tests"],
    "exclude": ["dist", "node_modules"]
}
