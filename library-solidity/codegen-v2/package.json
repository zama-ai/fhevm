{
  "name": "codegen",
  "type": "module",
  "bin": "./dist/_esm/index.js",
  "dependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "commander": "^14.0.1",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.1.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": ">=8.0.0",
    "typescript": ">=5.0.4"
  },
  "imports": {
    "#lib": {
      "types": "./dist/_types/index.d.ts",
      "import": "./dist/_esm/index.js"
    }
  },
  "scripts": {
    "postinstall": "npm run rebuild",
    "prettier:check": "prettier --config ./.prettierrc.json --check \"**/*.{js,json,md,sol,ts,yml}\"",
    "prettier:write": "prettier --config ./.prettierrc.json --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "rebuild": "npm run clean && npm run build",
    "clean": "rm -rf ./dist",
    "build": "tsc --project ./tsconfig.json",
    "tsc": "tsc --project ./tsconfig.json --noEmit",
    "codegen:e2e": "npm run build && ./codegen.mjs lib --config ./codegen.e2e.config.json --verbose",
    "codegen:host-contracts": "npm run build && ./codegen.mjs lib --config ./codegen.host-contracts.config.json --verbose",
    "codegen:library-solidity": "npm run build && ./codegen.mjs lib --config ./codegen.library-solidity.config.json --verbose",
    "test": "echo 'no ci test yet'"
  }
}
