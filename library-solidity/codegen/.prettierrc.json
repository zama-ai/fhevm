{
  "printWidth": 120,
  "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-solidity"],
  "overrides": [
    {
      "files": ["*.ts", ".js", ".cjs"],
      "options": {
        "singleQuote": true,
        "importOrder": ["<THIRD_PARTY_MODULES>", "^[./]"],
        "importOrderParserPlugins": ["typescript"],
        "importOrderSeparation": true,
        "importOrderSortSpecifiers": true
      }
    },
    {
      "files": "*.sol",
      "options": {
        "singleQuote": false
      }
    }
  ]
}
